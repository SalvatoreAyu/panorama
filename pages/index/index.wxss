/**index.wxss**/
.wrapper {
  position: relative;
}

.pop-up {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 999999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.pop-del {
  position: absolute;
  top: 0;
  right: 2%;
  font-size: 40rpx;
  
}
.label-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.pop-container {
  position: relative;
  width: 70%;
  height: 20%;
  background-color: #fff;
  border-radius: 10px;
  color: #666;
  font-size: 28rpx;
  z-index: 999999;
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
  align-items: center;
}


.tip-title {
  margin-top: 60rpx;
  /* margin-left: 57rpx; */
  height: 70%;
  width: 100%;
  color: #272727ab;
  font-size: 32rpx;
  display: block;
  z-index: 999999;
  /* overflow: hidden; */
  text-overflow:ellipsis;
  word-wrap:break-word;
  /* text-overflow: ellipsis; */
}

.pop-btn {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 40%;
}

.pop-confirm,
.pop-cancel {
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: black;
  border-top: 1rpx solid rgba(128, 128, 128, 0.212);
}

.pop-confirm {
  color: red;
  border-left: 1rpx solid rgba(128, 128, 128, 0.212);
}

.pop-complete {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1989fa;
  /* width:; */
  font-size: 35rpx;
  /* background: #1989fa; */
}

.pop-complete cover-view {
  /* color: #1989fa; */
}

.label-item {
  background-color: rgba(0, 0, 0, 0.582);
  border: 1rpx solid rgba(0, 0, 0, 0.473);
  border-radius: 20rpx;
  padding: 5rpx 18rpx;
  font-size: 30rpx;
  color: #fff;
  font-weight: 100;
}

.scene-item {
  display: flex;
  height: 60rpx;
  justify-content: center;
}